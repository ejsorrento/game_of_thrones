<h1>GoT Characters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Allegiance</th>
    <th>Sex</th>
  </tr>

  <% @characters.each do |character| %>
    <tr>
      <td><%= character.name %></td>
      <td><%= character.allegiance %></td>
      <td><%= character.sex %></td>
      <td><%= link_to 'Show', character_path(character) %></td>
      <td><%= link_to 'Edit', edit_character_path(character) %>
        <td><%= link_to 'Destroy', character_path(character),
                     method: :delete,
                     data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
